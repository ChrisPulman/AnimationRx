<Window
    x:Class="CP.Animation.TestApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Black Hawk (1984) - Reactive WPF"
    Width="960"
    Height="540"
    Background="Black"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  HUD  -->
        <DockPanel
            Grid.Row="0"
            Height="32"
            Background="#101010">
            <TextBlock
                x:Name="ScoreText"
                Margin="8,0"
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="Lime"
                Text="Score: 0" />
            <TextBlock
                x:Name="LivesText"
                Margin="16,0"
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="DeepSkyBlue"
                Text="Lives: 3" />
        </DockPanel>

        <!--  Playfield  -->
        <Canvas
            x:Name="Playfield"
            Grid.Row="1"
            Background="#000"
            Focusable="True" />

        <!--  Splash Overlay  -->
        <Grid
            x:Name="TitleOverlay"
            Grid.RowSpan="2"
            Background="#CC000000"
            Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock
                    x:Name="GameTitle"
                    Margin="0,0,0,10"
                    FontSize="48"
                    FontWeight="Bold"
                    Foreground="DeepSkyBlue"
                    Text="REACTIVE SHOOTER"
                    TextAlignment="Center" />
                <TextBlock
                    x:Name="CreditsText"
                    Margin="0,0,0,10"
                    FontSize="16"
                    Foreground="LightGray"
                    Text="by Chris Pulman"
                    TextAlignment="Center" />
                <Canvas
                    Width="240"
                    Height="60"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center">
                    <Polygon
                        Fill="Lime"
                        Points="0,50 40,10 80,50"
                        Stroke="Black"
                        StrokeThickness="1" />
                    <Rectangle
                        Canvas.Left="80"
                        Canvas.Top="27"
                        Width="80"
                        Height="6"
                        Fill="OrangeRed" />
                </Canvas>
                <TextBlock
                    x:Name="PressStartText"
                    Margin="0,16,0,0"
                    FontSize="18"
                    Foreground="White"
                    Text="Press Enter to Start"
                    TextAlignment="Center" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
